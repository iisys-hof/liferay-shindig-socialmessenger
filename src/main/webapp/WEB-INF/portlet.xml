<?xml version="1.0"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="2.0">
	<portlet>
		<portlet-name>ShindigMessaging</portlet-name>
		<display-name>ShindigMessaging</display-name>
        <portlet-class>de.iisys.liferay.portlet.shindigMessaging.messenger.ShindigMsgActions</portlet-class>
        <init-param>
			<name>config-template</name>
			<value>/html/messenger/configuration.jsp</value>
		</init-param>
		<init-param>
			<name>view-template</name>
			<value>/html/messenger/view.jsp</value>
		</init-param>
		<init-param>
		    <name>add-process-action-success-action</name>
		    <value>false</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		<resource-bundle>content.Language</resource-bundle>
        <portlet-info>
            <title>ShindigMessaging</title>
        </portlet-info>
	</portlet>
	
	<portlet>
		<portlet-name>ShindigMessaging HashtagView</portlet-name>
		<display-name>ShindigMessaging HashtagView</display-name>
        <portlet-class>de.iisys.liferay.portlet.shindigMessaging.hashtagView.HashtagViewActions</portlet-class>
		<init-param>
			<name>view-template</name>
			<value>/html/hashtagView/view.jsp</value>
		</init-param>
		<init-param>
		    <name>add-process-action-success-action</name>
		    <value>false</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		<resource-bundle>content.hashtagView.Language</resource-bundle>
        <portlet-info>
            <title>ShindigMessaging HashtagView</title>
        </portlet-info>
	</portlet>
</portlet-app>